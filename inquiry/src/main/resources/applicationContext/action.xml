<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/context
		  http://www.springframework.org/schema/context/spring-context-2.5.xsd
          http://www.springframework.org/schema/beans
          http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	
	<!-- Injection in Action Classes Starts -->
		<bean scope="prototype" id="controller.addInquiry" 		class="com.royaltechnosoft.inquiry.controller.inquiry.AddAction" />
		<bean scope="prototype" id="controller.closeInquiry" 		class="com.royaltechnosoft.inquiry.controller.inquiry.CloseAction" />
		<bean scope="prototype" id="controller.viewInquiry" 		class="com.royaltechnosoft.inquiry.controller.inquiry.ViewAction" />
		<bean scope="prototype" id="controller.searchInquiries" 		class="com.royaltechnosoft.inquiry.controller.inquiry.SearchAction" />
		<bean scope="prototype" id="controller.listFreshInquiries" 		class="com.royaltechnosoft.inquiry.controller.inquiry.ListFreshAction" />
		<bean scope="prototype" id="controller.listScheduledInquiries" 		class="com.royaltechnosoft.inquiry.controller.inquiry.ListScheduledAction" />
		
		<bean scope="prototype" id="controller.addCourse" 	class="com.royaltechnosoft.inquiry.controller.course.AddAction" />
		<bean scope="prototype" id="controller.removeCourse" 	class="com.royaltechnosoft.inquiry.controller.course.RemoveAction" />
		
		<bean scope="prototype" id="controller.addFollowup" 	class="com.royaltechnosoft.inquiry.controller.followup.AddAction" />
		
		<bean scope="prototype" id="controller.userLogin" 	class="com.royaltechnosoft.inquiry.controller.user.LoginAction" />
		<bean scope="prototype" id="controller.userLogout" 	class="com.royaltechnosoft.inquiry.controller.user.LogoutAction" />
		<bean scope="prototype" id="controller.forgotPassword" 	class="com.royaltechnosoft.inquiry.controller.user.ForgotPasswordAction" />
		<bean scope="prototype" id="controller.resetPassword" 	class="com.royaltechnosoft.inquiry.controller.user.ResetPasswordAction" />
		<bean scope="prototype" id="controller.updateUser" 	class="com.royaltechnosoft.inquiry.controller.user.UpdateAction" />
	<!-- Injection in Action Classes Ends-->

</beans>