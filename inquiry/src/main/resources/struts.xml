<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="true" />
	<constant name="struts.custom.i18n.resources" value="global" />

	<package name="custom-default" extends="struts-default">
		<interceptors>
			<interceptor name="authorize" class="interceptor.authorise"></interceptor>
			<interceptor-stack name="messageStoreDefault">
				<interceptor-ref name="store">
					<param name="operationMode">AUTOMATIC</param>
				</interceptor-ref>
				<interceptor-ref name="defaultStack"></interceptor-ref>
				<interceptor-ref name="authorize"/>
			</interceptor-stack>
		</interceptors>

		<default-interceptor-ref name="messageStoreDefault" />
		
		<global-results>
			<result name="login" type="redirect">/index.jsp</result>
			<result name="error">/error.jsp</result>
		</global-results>
		
		<global-exception-mappings>
			<exception-mapping exception="java.lang.Exception"
				result="error" />
		</global-exception-mappings>

	</package>

	<!-- Officer Package -->
	<package name="officer" namespace="/officer" extends="custom-default">
		
		<action name="Index">
			<result type="redirectAction">ListFollowups</result>
		</action>
		
		<!-- Inquiry -->
		<action name="AddInquiry" class="controller.officer.addInquiry">
			<result>add-inquiry.jsp</result>
			<result name="input">add-inquiry.jsp</result>
		</action>
		<action name="GetInquiry" class="controller.officer.getInquiry">
			<result>view-inquiry.jsp</result>
			<result name="input">view-inquiry.jsp</result>
		</action>
		<action name="SearchInquiries" class="controller.officer.searchInquiries">
			<result>search-inquiries.jsp</result>
			<result name="input">search-inquiries.jsp</result>
		</action>
		<action name="ListFreshInquiries" class="controller.officer.listFreshInquiries">
			<result>list-fresh-inquiries.jsp</result>
		</action>
		<action name="CloseInquiry" class="controller.officer.closeInquiry">
			<result type="redirectAction">GetInquiry.action?inquiryId=${inquiryID}</result>
		</action>

		<!-- Course -->
		<action name="AddCourse" class="controller.officer.addCourse">
			<result>manage-courses.jsp</result>
			<result name="input">manage-courses.jsp</result>
		</action>
		<action name="RemoveCourse" class="controller.officer.removeCourse">
			<result>manage-courses.jsp</result>
		</action>

		<!-- List Follow ups -->
		<action name="AddFollowup" class="controller.officer.addFollowup">
			<result type="redirectAction">GetInquiry.action?inquiryId=${followup.inquiryID}</result>
			<result name="input" type="redirectAction">GetInquiry.action?inquiryId=${followup.inquiryID}</result>
		</action>
		<action name="ListFollowups" class="controller.officer.listFollowups">
			<result>list-followups.jsp</result>
		</action>
		
		<!-- User -->
		<action name="UpdateUser" class="controller.updateUser">
			<result>account.jsp</result>
			<result name="input">account.jsp</result>
		</action>

	</package>

	<package name="default" namespace="/" extends="struts-default">
		<action name="Login" class="controller.userLogin">
			<result type="redirectAction">${session.user.role}/Index</result>
			<result name="input">index.jsp</result>
		</action>
		<action name="ForgotPassword" class="controller.forgotPassword">
			<result>index.jsp</result>
			<result name="input">forgot-password.jsp</result>
		</action>
		<action name="ResetPassword" class="controller.resetPassword">
			<result>index.jsp</result>
		</action>
		<action name="Logout" class="controller.userLogout">
			<result>index.jsp</result>
		</action>
	</package>

</struts>
